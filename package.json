{
  "name": "joybox",
  "version": "0.1.0",
  "description": "Simple touch-based media player with Web UI",
  "repository": "https://github.com/sdellenb/joybox",
  "author": "Simon Dellenbach <sdellenb@gmail.com>",
  "license": "GPL-3.0",
  "private": false,
  "scripts": {
    "dev": "cross-env NODE_ENV=development nodemon server/index.js --watch server",
    "build": "nuxt build",
    "start": "cross-env NODE_ENV=production node server/index.js",
    "generate": "nuxt generate",
    "lint": "eslint --ext .js,.vue --ignore-path .gitignore .",
    "precommit": "npm run lint",
    "initdb": "./node_modules/.bin/knex migrate:latest --env development",
    "initdb:prod": "./node_modules/.bin/knex migrate:latest --env production",
    "initdb:test": "./node_modules/.bin/knex migrate:latest --env test",
    "scan": "./node_modules/.bin/knex seed:run --env development",
    "scan:prod": "./node_modules/.bin/knex seed:run --env production",
    "scan:test": "./node_modules/.bin/knex seed:run --env test",
    "test": "./node_modules/.bin/mocha ./test/**/*.test.js"
  },
  "dependencies": {
    "cross-env": "^5.2.0",
    "knex": "^0.15.2",
    "koa": "^2.5.2",
    "koa-router": "^7.4.0",
    "nuxt": "^2.0.0",
    "recursive-readdir": "^2.2.2",
    "sqlite3": "^4.0.4"
  },
  "devDependencies": {
    "babel-eslint": "^8.2.1",
    "chai": "^4.2.0",
    "chai-http": "^4.2.0",
    "eslint": "^5.0.1",
    "eslint-loader": "^2.0.0",
    "eslint-plugin-vue": "^4.0.0",
    "mocha": "^5.2.0",
    "nodemon": "^1.11.0",
    "sinon": "^7.1.1"
  }
}
