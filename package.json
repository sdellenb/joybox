{
  "name": "joybox",
  "version": "0.2.0",
  "description": "A kid-friendly touch-based media library player on the Raspberry Pi",
  "repository": "https://github.com/sdellenb/joybox",
  "author": "Simon Dellenbach <sdellenb@gmail.com>",
  "license": "GPL-3.0",
  "private": false,
  "scripts": {
    "dev": "cross-env DEBUG=joybox:* NODE_ENV=development nodemon server/index.js --watch server",
    "dev-debug": "node --inspect server/index.js",
    "build": "nuxt build",
    "start": "cross-env NODE_ENV=production node server/index.js",
    "generate": "nuxt generate",
    "lint": "eslint --ext .js,.vue --ignore-path .gitignore .",
    "lint-md": "./node_modules/.bin/remark .",
    "precommit": "npm run lint",
    "initdb": "./node_modules/.bin/knex migrate:latest --env development",
    "initdb:prod": "./node_modules/.bin/knex migrate:latest --env production",
    "initdb:test": "./node_modules/.bin/knex migrate:latest --env test",
    "scan": "./node_modules/.bin/knex seed:run --env development",
    "scan:prod": "./node_modules/.bin/knex seed:run --env production",
    "scan:test": "./node_modules/.bin/knex seed:run --env test",
    "test": "./node_modules/.bin/mocha ./test/**/*.test.js"
  },
  "dependencies": {
    "@nuxtjs/axios": "^5.3.6",
    "cross-env": "^5.2.0",
    "debug": "^4.1.0",
    "fs-jetpack": "^2.2.0",
    "knex": "^0.19.5",
    "koa": "^2.6.2",
    "koa-body": "^4.0.4",
    "koa-router": "^7.4.0",
    "nuxt": "^2.3.4",
    "omx-interface": "https://github.com/sdellenb/node-omx-interface",
    "play-sound-mplayer": "https://github.com/sdellenb/play-sound-mplayer",
    "recursive-readdir": "^2.2.2",
    "sharp": "^0.21.1",
    "sqlite3": "^4.0.4",
    "sse-broadcast": "^0.5.2",
    "uuid": "^3.3.2",
    "vue-types": "^1.3.3",
    "vue2-touch-events": "^1.1.1"
  },
  "devDependencies": {
    "babel-eslint": "^10.0.1",
    "chai": "^4.2.0",
    "chai-http": "^4.2.0",
    "eslint": "^5.9.0",
    "eslint-config-prettier": "^3.3.0",
    "eslint-loader": "^2.1.1",
    "eslint-plugin-vue": "^5.0.0",
    "eslint-plugin-vue-types": "1.0.0",
    "mocha": "^5.2.0",
    "node-sass": "^4.11.0",
    "nodemon": "^1.18.7",
    "remark-cli": "^6.0.1",
    "remark-preset-lint-recommended": "^3.0.2",
    "sass-loader": "^7.1.0",
    "sinon": "^7.1.1"
  },
  "resolutions": {
    "eslint-utils": "^1.4.1",
    "fstream": "^1.0.12",
    "js-yaml": "^3.13.1",
    "lodash": "^4.17.13",
    "lodash.template": "^4.5.0",
    "tar": "^4.4.10"
  }
}
